{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2015",
    "lib": [
      "esnext",
      "dom"
    ],
    "jsx": "preserve",
    "moduleResolution": "node",
    "rootDirs": [ "./pages", "./src" ],
    "forceConsistentCasingInFileNames": false,
    "noImplicitReturns": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsxImportSource": "@emotion/react"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
